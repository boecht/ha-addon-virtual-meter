# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

# Python files use 4 space indents
[*.py]
indent_size = 4

# Markdown retains long tables occasionally
[*.md]
max_line_length = unset
