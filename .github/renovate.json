{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommitsDisabled"
  ],
  "enabledManagers": [
    "github-actions",
    "pip_requirements",
    "dockerfile"
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/^requirements-dev\\.txt$/",
      "/^virtual-meter/requirements\\.txt$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "dependencies"
      ]
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "labels": [
        "dependencies",
        "python"
      ]
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "labels": [
        "dependencies",
        "docker"
      ]
    }
  ]
}
